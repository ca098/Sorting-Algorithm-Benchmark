EXE_DIR =.
EXE = $(EXE_DIR)/compiled

SRC= Main.c bubbleSort.c shellSort.c quickSort.c

CC=	cc
COPT=	-o
CFLAGS=	-lm


OBJ= $(SRC:.c=.o)

.c.o:
	$(CC) $(COPT) -c -o $@ $<

$(EXE): $(OBJ)
 $(CC) $(OBJ) $(CFLAGS) -o $(EXE)

clean:
 rm -f $(OBJ) $(EXE)

main.o:	Main.c
bubbleSort.o:	bubbleSort.c
quickSort.o:	quickSort.c
shellSort.o:	shellSort.c

